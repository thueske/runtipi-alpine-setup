/var/log/autoupgrade.log {
    # Log w√∂chentlich rotieren
    weekly
    # 4 alte Versionen behalten
    rotate 4
    # Alte Logs komprimieren
    compress
    # Fehler ignorieren, wenn Log fehlt
    missingok
    # Nicht rotieren, wenn Log leer ist
    notifempty
    # Neue Log-Datei mit den angegebenen Rechten erstellen
    create 0640 root root
}