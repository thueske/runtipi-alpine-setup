/var/log/autoupgrade.log {
    weekly               # Log w√∂chentlich rotieren
    rotate 4             # 4 alte Versionen behalten
    compress             # Alte Logs komprimieren
    missingok            # Fehler ignorieren, wenn Log fehlt
    notifempty           # Nicht rotieren, wenn Log leer ist
    create 0640 root root # Neue Log-Datei mit den angegebenen Rechten erstellen
}